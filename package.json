{
    "name": "file-updater",
    "description": "Keep files up to date in a project workspace",
    "version": "0.5.0",
    "publisher": "AndreasArvidsson",
    "license": "MIT",
    "main": "./lib/index.js",
    "bin": {
        "file-updater": "lib/cli.js"
    },
    "types": "lib/types/index.d.ts",
    "files": [
        "lib/*",
        "!lib/tests/*",
        "!lib/types/tests/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AndreasArvidsson/file-updater.git"
    },
    "sponsor": {
        "url": "https://github.com/sponsors/AndreasArvidsson"
    },
    "funding": "https://github.com/sponsors/AndreasArvidsson",
    "scripts": {
        "example": "tsx src/tests/example.ts",
        "compile": "tsc -p .",
        "fix:meta": "prettier --write .",
        "test:meta": "eslint src && prettier --check .",
        "test": "npm run compile && tsx src/tests/runTests.ts"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/mocha": "10.0.6",
        "@types/node": "20.14.7",
        "@types/uuid": "10.0.0",
        "@typescript-eslint/eslint-plugin": "7.13.1",
        "@typescript-eslint/parser": "7.13.1",
        "eslint": "8.57.0",
        "execa": "9.2.0",
        "glob": "10.4.2",
        "mocha": "10.4.0",
        "prettier": "3.3.2",
        "tsx": "4.15.7",
        "typescript": "5.4.5",
        "uuid": "10.0.0"
    }
}
